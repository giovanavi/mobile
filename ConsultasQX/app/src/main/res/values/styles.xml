        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--<style name="AppTheme"></style>-->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight"></style>

    <style name="CustomMaterialDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Personalize os atributos aqui -->
